.row
  .col-sm-offset-3.col-sm-6
    %h2 Sign up
    = devise_error_messages!
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-group
        %label.input-group
          .input-group-addon
            %i.fa.fa-envelope
          = f.email_field :email, class: 'form-control', autofocus: true, placeholder: 'Email address', required: true
      .form-group
        %label.input-group
          .input-group-addon
            %i.fa.fa-key
          = f.password_field :password, class: 'form-control', placeholder: 'Password', required: true, pattern: '.{8,}', title: '8 characters minimum'
      .form-group= f.submit 'Sign up', class: 'btn btn-primary pull-right'
    = render 'users/shared/links'
