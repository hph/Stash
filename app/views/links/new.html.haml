.row
  .col-sm-offset-3.col-sm-6
    %h2 New link
    = form_for :link, url: create_link_path do |f|
      .form-group
        %label URL
        = f.text_field :url, class: 'form-control', autocomplete: 'off', placeholder: 'URL', required: true, autofocus: true
      .form-group
        %label Name
        = f.text_field :name, class: 'form-control', autocomplete: 'off', placeholder: 'Name', required: true
      .form-group
        %label Tags
        = f.text_field :tags, class: 'form-control', autocomplete: 'off', placeholder: 'Tags', required: true
      .form-group
        = f.submit 'Create link', class: 'btn btn-primary form-control'
